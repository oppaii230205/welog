extends layouts/main

block content
  .container.mt-5
    .row.justify-content-center
      .col-md-8.col-lg-6
        .card.shadow.animate__animated.animate__fadeIn
          .card-body.p-4.p-md-5
            h2.text-center.mb-4
              i.bi.bi-person-plus.me-2
              | Create Your Account
            
            //- Signup Form
            form(action="/signup", method="POST", class="form-signup")
              .row
                .col-md-6.mb-3
                  label.form-label(for="name") Full Name
                  input#name.form-control(
                    type="text",
                    name="name",
                    required,
                    placeholder="John Doe",
                    minlength="2"
                  )
                
                .col-md-6.mb-3
                  label.form-label(for="email") Email
                  input#email.form-control(
                    type="email",
                    name="email",
                    required,
                    placeholder="your@email.com"
                  )
              
              .mb-3
                label.form-label(for="password") Password
                .input-group
                  input#password.form-control(
                    type="password",
                    name="password",
                    required,
                    placeholder="••••••••",
                    minlength="8",
                    pattern="^(?=.*[A-Za-z])(?=.*\\d).{8,}$",
                    title="Minimum 8 characters with at least 1 letter and 1 number"
                  )
                  button.btn.btn-outline-secondary.password-toggle(type="button")
                    i.bi.bi-eye-slash
              
              .mb-4
                label.form-label(for="passwordConfirm") Confirm Password
                input#passwordConfirm.form-control(
                  type="password",
                  name="passwordConfirm",
                  required,
                  placeholder="••••••••"
                )
                .form-text.mt-1
                  | Password must contain at least 8 characters, including 1 letter and 1 number.
              
              .mb-3.form-check
                input#terms.form-check-input(
                  type="checkbox",
                  required
                )
                label.form-check-label(for="terms")
                  | I agree to the 
                  a(href="/terms") Terms of Service
                  |  and 
                  a(href="/privacy") Privacy Policy
              
              .d-grid.gap-2
                button.btn.btn-primary.btn-lg(type="submit", id="signup-btn")
                  span#signup-text
                    i.bi.bi-person-plus.me-2
                    | Create Account
                  span#signup-spinner.spinner-border.spinner-border-sm.ms-2.d-none
              
              .text-center.mt-3
                p.mb-0
                  | Already have an account? 
                  a.text-decoration-none(href="/login") Log in